package corejava.oopintro;

import java.util.ArrayList;

public class StackNoRepeat implements Stack {

    private ArrayList<Object> elements;

    public StackNoRepeat(Object... obj) {
        elements = new ArrayList<Object>();
        if (obj.length > 0) {
            for (int i = 0; i < obj.length; i++) {
                boolean inStack = elements.contains(obj[i]);
                if (!inStack) {
                    elements.add(obj);
                } else {
                    System.out.println("Already in stack!");
                }
            }
        }
    }

    @Override
    public int length() {
        return elements.size();
    }

    @Override
    public void push(Object obj) {
        boolean inStack = elements.contains(obj);
        if (!inStack) {
            elements.add(obj);
        } else {
            System.out.println("Already in stack!");
        }
    }

    @Override
    public void pop() {
        elements.remove(elements.size() - 1);
    }

    @Override
    public void clear() {
        for (int i = elements.size() - 1; i >= 0; i--) {
            elements.remove(i);
        }
    }

    @Override
    public boolean isEmpty() {
        if (this.length() == 0) {
            return true;
        }
        return false;
    }

    @Override
    public ArrayList<Object> getElements() {
        return this.elements;
    }

}
